service mishow_start /vendor/bin/sh /vendor/bin/mishow.sh 1
       class main
       disabled
       oneshot
       seclabel u:r:mishow:s0

service mishow_stop /vendor/bin/sh /vendor/bin/mishow.sh 0
       class main
       disabled
       oneshot
       seclabel u:r:mishow:s0

on property:bsp.mishow.ctl=true
       start mishow_start

on property:bsp.mishow.ctl=false
       start mishow_stop
